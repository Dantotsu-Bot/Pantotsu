<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Shadow layer -->
  <item>
    <shape>
      <solid android:color="@android:color/transparent" />
      <corners android:radius="8dp" />
      <stroke android:color="@android:color/black" android:width="0dp" /> <!-- Black shadow -->
      <!-- Shadow effect done programmatically, not in drawable -->
    </shape>
  </item>

  <!-- Fill layer -->
  <item>
    <shape>
      <solid android:color="@android:color/transparent" />
      <corners android:radius="8dp" />
    </shape>
  </item>
</layer-list>